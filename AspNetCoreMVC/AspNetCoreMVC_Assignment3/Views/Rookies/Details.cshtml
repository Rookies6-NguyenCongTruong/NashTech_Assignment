@model PersonDetailsModel

@{
    ViewData["Title"] = "Person Information";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<div class="row">
    <h1 class="display-4 text-center">Person Information</h1>
    <form asp-controller="Rookies" asp-action="Update" asp-route-index="@index" method="post" class="col-8 offset-2">
        <div class="form-group">
            <label asp-for="FirstName" class="mb-1"></label>
            <label class="form-control">@Model.FirstName</label>
        </div>
        <div class="form-group mt-3">
            <label asp-for="LastName" class="mb-1"></label>
            <label class="form-control">@Model.LastName</label>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Gender" class="mb-1"></label>
            <label class="form-control">@Model.Gender</label>
        </div>
        <div class="form-group mt-3">
            <label asp-for="DateOfBirth" class="mb-1"></label>
            <label class="form-control">@Model.DateOfBirth</label>
        </div>
        <div class="form-group mt-3">
            <label asp-for="PhoneNumber" class="mb-1"></label>
            <label class="form-control">@Model.PhoneNumber</label>
        </div>
        <div class="form-group mt-3">
            <label asp-for="BirthPlace" class="mb-1"></label>
            <label class="form-control">@Model.BirthPlace</label>
        </div>
        <div class="form-group mt-3">
            <a class="btn btn-primary" role="button" asp-controller="Rookies" asp-action="Index">Back to list</a>
            <a class="btn btn-danger" role="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</a>
        </div>
    </form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Rookies" asp-action="DeleteRedirectToResultView" asp-route-index="@index"
                method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this person?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>